<% include header %>
<div class="container" id="oligoOrder">
<div id="oligoForm">

  <!-- progressbar -->
  <ul id="oligoProgressbar">
    <li class="active"><%=texts.order_review%></li>
    <li><%=texts.order_summary%></li>
    <li><%=texts.order_confirmation%></li>
  </ul>

  <!-- Setp 3: Order Review -->
  <fieldset id="fsOrderReview">
    <h2 class="fs-title"><%=texts.order_review%></h2>
    <% if(order.length == 0) {%>
      <div class="container summary">
      <div>
        <h3 class="fs-subtitle"><%=texts.cart_empty%></h3>
      </div>
      </div>
    <% } %>
    <% include orderSummary %>
    <input type="button" id="closeConfirmation" class="submit action-button" value="<%=texts.home%>" />
    <input type="button" name="next" class="stepNext action-button <% if(order.length == 0) {%>disabled<% } %>" value="<%=texts.next%>" <% if(order.length == 0) {%>disabled<% } %>/>
  </fieldset>

  <!-- Step 4: Summary -->
  <fieldset id="fsOrderSummary">
    <div id="order_summary">
    <h2 class="fs-title"><%=texts.order_summary%></h2>

    <table class="table table-hover table-condensed">
        <tbody>
        <tr>
            <th><%=texts.first_name%></th>
            <td><input type="text" id="firstname" name="firstname" value="<%=user.firstName%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.last_name%></th>
            <td><input type="text" id="lastname" name="lastname" value="<%=user.lastName%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.email_address%></th>
            <td><input type="email" id="emailaddr" name="emailaddr" value="<%=user.username%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.account_holder%></th>
            <td><input type="text" id="accHolder" name="accHolder" value="<%=user.accountHolder%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.institution%></th>
            <td><input type="text" id="institution" name="institution" value="<%=user.institution%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.P_O_umber%></th>
            <td><input type="text" id="ponumber" name="ponumber" value="<%=user.poNumber%>" disabled></td>
        </tr>
        <tr>
            <th><%=texts.invoice_by%></th>
            <td>
                <select class="form-control" id="invoice" name="invoice" style="margin-left:1.3%;" disabled>
                    <option value="creditcard"
                    <% if(user && user.invoiceBy == 'creditcard'){ %>
                        selected
                    <% } %>
                    ><%=texts.credit_card%></option>
                    <option value="blanketorder"
                    <% if(user && user.invoiceBy == 'blanketorder'){ %>
                        selected
                    <% } %>
                    ><%=texts.blanket_order%></option>
                </select>
            </td>
        </tr>
        <tr>
            <th><%=texts.date_requirement%></th>
            <td>
                <select class="form-control" id="datereq" name="datereq" style="margin-left:1.3%;">
                    <option value="1 ~ 2 <%=texts.day%>" selected="selected">1 ~ 2 <%=texts.day%></option>
                    <option value="<%=texts.rush%>!"><%=texts.rush%>!</option>
                    <option value=" < 1 <%=texts.week%>"> < 1 <%=texts.week%></option>
                </select>
            </td>
        </tr>
        <tr>
            <th><%=texts.well_plates%></th>
            <td>
                <input type="checkbox" id="wellPlates" name="wellPlates" value="<%=texts.well_plates%>">
            </td>
        </tr>
        </tbody>
    </table>
    </div>
    <% include orderSummary %>
    <form action="/confirmation" method="post">
        <input type="button" name="previous" class="previous action-button" value="<%=texts.previous%>" />
        <input type="hidden" name="personalData" id="personalData" value="" />
        <input type="submit" id="orderConfirmation" name="orderConfirmation" class="action-button" value="<%=texts.confirm%>" />
    </form>
  </fieldset>
</div>
</div>

<% include footer %>