<!-- Step 2: Design Options -->

<fieldset id="fsOligoPersonal" style="margin-bottom:40px;">

    <div class="container" id="oligoStepTwo" style="margin-bottom:20px;">
        <% if(title == "registration"){ %>
            <legend align="center"> <%=texts[title]%> </legend>
        <% } else { %>
            <legend align="center"> <%=texts.personal_information%> </legend>
        <% } %>
        <div class="personalInfo">
        <div id="orderProcessPerInfoAlert" class="alert alert-danger invisible"><%=error%></div>
        <li>
        <label for="firstname"><%=texts.first_name%>: </label>
        <input type="text" name="firstname" required style="margin-left:15px;" id="firstname" value="<%=user?user.firstName:"" %>">
        </li>
        <li>
        <label for="lastname"><%=texts.last_name%>: </label>
        <input type="text" name="lastname" required style="margin-left:15px;" id="lastname" value="<%=user?user.lastName:"" %>">
        </li>
        <li>
        <label for="emailaddr"><%=texts.email_address%></label>
        <input type="email" name="emailaddr" required style="margin-left:15px;" id="emailaddr" value="<%=user?user.username:"" %>">
        </li>
        <% if(title == "registration"){ %>
            <li>
            <label for="password"><%=texts.password%></label>
            <input type="password" name="password" required style="margin-left:15px;" id="password" value="<%=user?user.password:"" %>">
            </li>
        <% } %>
        <li>
        <label for="accHolder"><%=texts.account_holder%></label>
        <input type="text" name="accHolder" style="margin-left:15px;" id="accHolder" value="<%=user?user.accountHolder:"" %>">
        </li>
        <li>
        <label for="institution"><%=texts.institution%></label>
        <input type="text" name="institution" style="margin-left:15px;" id="institution" value="<%=user?user.institution:"" %>">
        </li>
        <li>
        <label for="ponumber"><%=texts.P_O_umber%></label>
        <input type="text" name="ponumber" style=" margin-left:15px;" id="ponumber" value="<%=user?user.poNumber:"" %>">
        </li>
        <li>
        <label for="invoice"><%=texts.invoice_by%></label>
        <select class="form-control" name="invoice" style="margin-left:1.3%;">
            <option value="creditcard" 
            <% if(user && user.invoiceBy == 'creditcard'){ %>
                selected
            <% } %>
            ><%=texts.credit_card%></option>
            <option value="blanketorder" 
            <% if(user && user.invoiceBy == 'blanketorder'){ %>
                selected
            <% } %>
            ><%=texts.blanket_order%></option>
        </select>
        </li>
        </div>
    </div>
    <div id="orderProcessPerInfoAlert2" class="alert alert-danger invisible"><%=error%></div>
    <% if(title == "registration"){ %>
        <input type="submit" name="submit" class="action-button" value="<%=texts.submit%>" />
    <% } else { %>
        <input type="button" name="previous" class="previous action-button" value="<%=texts.previous%>" />
        <input type="button" name="next" class="stepNext action-button disabled" value="<%=texts.next%>" id="orderProcessPerInfo"/>
    <% } %>

</fieldset>